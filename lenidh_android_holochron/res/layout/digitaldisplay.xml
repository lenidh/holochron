<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/hour1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/digitaldigit1_black"
			android:contentDescription="@string/digital_digit_description" />

		<ImageView
			android:id="@+id/hour2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/digitaldigit2_black"
			android:contentDescription="@string/digital_digit_description" />

		<ImageView
			android:id="@+id/colon1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/digitalcolon_black"
			android:contentDescription="@string/digital_colon_description" />

		<ImageView
			android:id="@+id/minute1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/digitaldigit3_black"
			android:contentDescription="@string/digital_digit_description" />

		<ImageView
			android:id="@+id/minute2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/digitaldigit4_black"
			android:contentDescription="@string/digital_digit_description" />

		<ImageView
			android:id="@+id/colon2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/digitalcolon_black"
			android:contentDescription="@string/digital_colon_description" />

		<ImageView
			android:id="@+id/second1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/digitaldigit5_black"
			android:contentDescription="@string/digital_digit_description" />

		<ImageView
			android:id="@+id/second2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:src="@drawable/digitaldigit6_black"
			android:contentDescription="@string/digital_digit_description" />

		<ImageView
			android:id="@+id/milli1"
			android:layout_width="@dimen/small_digit_width"
			android:layout_height="@dimen/small_digit_height"
			android:src="@drawable/digitaldigit7_black"
			android:contentDescription="@string/digital_digit_description"
			android:layout_marginTop="@dimen/small_digit_offset" />

		<ImageView
			android:id="@+id/milli2"
			android:layout_width="@dimen/small_digit_width"
			android:layout_height="@dimen/small_digit_height"
			android:src="@drawable/digitaldigit8_black"
			android:contentDescription="@string/digital_digit_description"
			android:layout_marginTop="@dimen/small_digit_offset" />

	</LinearLayout>

</LinearLayout>