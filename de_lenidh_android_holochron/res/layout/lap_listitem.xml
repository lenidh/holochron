<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/tile_margin"
    android:paddingLeft="@dimen/tile_margin"
    android:paddingRight="@dimen/tile_margin">

    <LinearLayout
        android:id="@+id/tile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@drawable/tile_shape">

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tile_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1"
            tools:ignore="HardcodedText"
            android:layout_gravity="center_vertical|left"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/tile_margin"
            android:gravity="right">

            <TextView
                android:id="@+id/txt_diff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tile_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="+0.00"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="00:00:00.00"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>